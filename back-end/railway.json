{
  "$schema": "https://railway.com.br/schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacks": {
      "plan": "nodejs-pnpm"
    }
  },
  "deploy": {
    "startCommand": "node src/index.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10,
    "restartPolicy": "ON_FAILURE",
    "restartLimit": 3,
    "numReplicas": 1,
    "sleep": "noreplica"
  }
}
